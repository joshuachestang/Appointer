<h1>Listing Images</h1>

<table>
  <tr>
    <th>Business</th>
    <th>Caption</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gallery_images.each do |gallery_image| %>
  <tr>
    <td><%= image_tag(gallery_image.image(:thumb)) %></td>
    <td><%= gallery_image.business_id %></td>
    <td><%= gallery_image.caption %></td>
    <td><%= link_to 'Show', business_gallery_image_path(@business, gallery_image) %></td>
    <td><%= link_to 'Edit', edit_business_gallery_image_path(@business, gallery_image) %></td>
    <td><%= link_to 'Destroy', business_gallery_image_path(@business, gallery_image), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

